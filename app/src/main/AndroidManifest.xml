        <activity android:name=".view.EditStockActivity" />
        <activity android:name=".view.ListaCategoriasActivity" />
        <activity android:name=".view.ConfiguracoesActivity" />
        <activity android:name=".view.OrderActivity" />
        <activity android:name=".view.ListOrderItemsActivity" />
        <activity android:name=".view.ProviderActivity" />
        <activity android:name=".view.MainActivity" />
        <activity
            android:name=".view.CheckingLoginActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.LoginActivity" />
    </application>

</manifest>